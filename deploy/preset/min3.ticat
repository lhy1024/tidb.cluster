help = 3*tikv + 1*tidb + 1*pd on the same host
abbr = m3
trivial = 3

[arg]
port-delta|port|p = +0
host|h = 127.0.0.1
cluster-name|cluster|name|n = test
version|ver|v = nightly
keep-monitor-when-destroy|keep-monitor|keep-mon = true

[flow/]
tidb.config name=[[cluster-name]] ver=[[version]] keep-mon=[[keep-monitor-when-destroy]]
deploy.set.tikv [[host]]@+0,[[host]]@+2,[[host]]@+4
deploy.set.pd [[host]]
deploy.set.tidb [[host]]
deploy.set.port.delta [[port-delta]]
